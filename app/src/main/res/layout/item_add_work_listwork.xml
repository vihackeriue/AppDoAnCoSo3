<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_item_adddetailwork"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    android:elevation="8dp"

    >
    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="16dp"
       >

        <TextView
            android:id="@+id/tv_title_work_listwork"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:text="Tiêu đề"
            android:textSize="26sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:padding="4dp"
           />

        <TextView
            android:id="@+id/tv_content_work_listwork"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:ems="10"
            android:gravity="top"
            android:hint="Ghi Chú"
            android:inputType="textPersonName"
            android:textSize="22sp"
            android:padding="4dp"
            android:layout_marginTop="6dp"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"

            android:gravity="end"
            android:orientation="horizontal"

            >

            <TextView
                android:id="@+id/tv_count_hour"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/round_back_black10_10"
                android:text="00"
                android:textColor="@color/black"
                android:textSize="26dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:text=":"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="26dp"
                />
            <TextView
                android:id="@+id/tv_count_minute"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/round_back_black10_10"
                android:text="00"
                android:textColor="@color/black"
                android:textSize="26dp"
                android:textStyle="bold"
                />
        </LinearLayout>


    </LinearLayout>


</androidx.cardview.widget.CardView>